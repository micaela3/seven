<p id="notice"><%= notice %></p>
<%= button_to 'Scrape', scrape_courses_path %>
<%= button_to 'Clear Table', clear_table_courses_path %>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course Name and Section</th>
      <th>Section</th>
      <th>Instructors</th>
      <th>Weekdays</th>
      <th>Times</th>
      <th>Class Type</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name_and_section %></td>
        <td><%= course.section %></td>
        <td><%= course.instructor %></td>
        <td><%= course.weekdays %></td>
        <td><%= course.times %></td>
        <td><%= course.class_type %></td>
        <td><%= course.room %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
